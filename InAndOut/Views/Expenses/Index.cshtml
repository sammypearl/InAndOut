@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Expenses" asp-action="Create" class="btn btn-primary">Create New Expenses</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Expenses Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expens in Model)
                {  
                <tr>
                    <td width="25%">@expens.Id</td>
                    <td width="25%">@expens.ExpenseName</td>
                    <td width="25%">@expens.Amount</td>
                    <td width="25%">@expens.ExpenseType.Name</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expenses" asp-action="Update" asp-route-Id="@expens.Id" class="btn btn-primary mx-1 ">Update</a>
                            <a asp-controller="Expenses" asp-action="Delete" asp-route-Id="@expens.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Expenses Created yet</p>
    }
</div>